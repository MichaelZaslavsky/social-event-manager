{
  "Serilog": {
    "SeqServerUrl": "http://seq-analysis:5341",
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "IdentityServer4": "Information",
        "Database": "Information"
      }
    }
  },
  "AllowedHosts": "*",
  "Redis": [ "localhost:6379", "localhost:6380", "localhost:6381", "localhost:6382" ],
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": false,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,

    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1s",
        "Limit": 1000
      },
      {
        "Endpoint": "*",
        "Period": "15m",
        "Limit": 3000
      },
      {
        "Endpoint": "*",
        "Period": "12h",
        "Limit": 50000
      },
      {
        "Endpoint": "*",
        "Period": "7d",
        "Limit": 200000
      }
    ]
  },
  "Jwt": {
    "Audience": "localhost",
    "Issuer": "api.localhost",
    "ExpiryInDays": "1"
  }
}