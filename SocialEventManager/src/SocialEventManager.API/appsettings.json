{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "IdentityServer4": "Information",
        "Database": "Information"
      }
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "SocialEventManager": "Data Source=.;Initial Catalog=SocialEventManager;Integrated Security=True;MultipleActiveResultSets=True;",
    "SocialEventManagerHangfire": "Data Source=.;Initial Catalog=SocialEventManagerHangfire;Integrated Security=True;MultipleActiveResultSets=True;"
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": false,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,

    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1s",
        "Limit": 10
      },
      {
        "Endpoint": "*",
        "Period": "15m",
        "Limit": 300
      },
      {
        "Endpoint": "*",
        "Period": "12h",
        "Limit": 5000
      },
      {
        "Endpoint": "*",
        "Period": "7d",
        "Limit": 20000
      }
    ]
  }
}
